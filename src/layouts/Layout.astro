---
interface Props {
	title: string;
	className: string
}

const currentYear = new Date().getFullYear();

const { title, className } = Astro.props;
---

<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="/sitemap-index.xml">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class={`${className} w-screen h-screen bg-background flex flex-col justify-center items-center gap-5 p-4 sm:p-10`}>
		<slot />
	</body>
	<footer  class="w-full flex justify-center p-4 bg-background sm:p-6">
		<p class="text-white text-center text-sm sm:text-base">© { currentYear } - João Victor Lourenço</p>
	</footer>
</html>
